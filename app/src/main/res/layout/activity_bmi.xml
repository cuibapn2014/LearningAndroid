<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/convert_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="0">
    <TableRow>
        <TextView
            android:text="Fahrenheit"
            android:padding="5dp"
            android:gravity="center"></TextView>
        <EditText
            android:id="@+id/fah"
            android:inputType="number"></EditText>
    </TableRow>
        <TableRow>
            <TextView
                android:padding="5dp"
                android:text="Celsius"
                android:gravity="center"></TextView>
            <EditText
                android:id="@+id/cel"
                android:inputType="number"></EditText>
        </TableRow>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/to_celsius"
                android:textColor="#fff"
                android:text="Convert to Celsius"
                android:layout_height="wrap_content"
                android:background="@color/colorDark"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content" />

            <Button
                android:id="@+id/to_fahrenheit"
                android:textColor="#000"
                android:text="Convert to Fahrenheit"
                android:layout_height="wrap_content"
                android:background="@color/colorWarning"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_clear"
            android:background="@color/colorPrimaryDark"
            android:text="CLEAR"
            android:layout_marginTop="10dp"
            android:textColor="#fff"></Button>
            <Button
                android:id="@+id/btn_swipe2"
                android:background="@color/colorDanger"
                android:text="QUAY LẠI TRANG CHỦ"
                android:layout_marginTop="10dp"
                android:textColor="#fff"></Button>
    </TableLayout>
</LinearLayout>


